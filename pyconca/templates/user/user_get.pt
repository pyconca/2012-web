<div metal:use-macro="layout">
    <div metal:fill-slot="content">

        <div class="row-fluid">
            <div class="span12">
                <br>
                <h1><a tal:attributes="href index_url">users</a> / <span tal:replace="user.username"></h1>
                <hr>

                <strong>Name:</strong>
                <span tal:replace="user.first_name">
                <span tal:replace="user.last_name">

                <br>
                <strong>Email Address:</strong>
                <span tal:replace="user.email">

                <br>
                <strong>Username:</strong>
                <span tal:replace="user.username">

                <br>
                <br>
                <form action="${user.delete_url}" method="POST">
                    <a class="btn btn-primary" href='${user.update_url}'>Edit</a>
                    <input class="btn" type="submit" value="Delete"/>
                </form>
            </div>
        </div>

    </div><!-- content slot -->
</div><!-- layout template -->
